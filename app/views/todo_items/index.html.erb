<h1><%= @todo_list.title %></h1>

<ul class="todo_items">
  <% @todo_list.todo_items.each do |item| %>
  <li><%= item.content %></li>
  <%= link_to "Edit item", edit_todo_list_todo_item_path(item) %>
  <% end %>
</ul>

<p>
  <%= link_to "New todo item", new_todo_list_todo_item_path %>
  <%= link_to 'Back', todo_lists_path %>
</p>
